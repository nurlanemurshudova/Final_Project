@model GurdianNumber

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label">Kateqoriya Adı</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppontmentId" class="control-label">Kateqoriya</label>
                <select asp-for="AppontmentId" class="form-control">
                    @foreach (var item in ViewData["Appointments"] as IEnumerable<Appointment>)
                    {
                        <option value="@item.Id">@item.GurdianName</option>
                    }
                </select>
            </div>

            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="@DefaultConstantValue.ADD_MESSAGE" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@DefaultConstantValue.RETURN_TO_BACK</a>
</div>

