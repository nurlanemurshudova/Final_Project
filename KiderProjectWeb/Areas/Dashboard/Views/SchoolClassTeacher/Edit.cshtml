@model SchoolClassTeacherVM
<style>
    .error-span {
        color: red;
        font-size: 18px;
        font-weight: 650;
        margin-left: 5px;
    }

    .iti {
        width: 100%;
    }

    .right-sidebar-item {
        overflow: hidden;
        height: 550px;
        padding-bottom: 20px;
    }


    .checkboxes {
        width: 100%;
        background: rgb(240, 240, 240);
        padding: 20px;
        overflow: scroll;
        max-height: 450px;
        overflow-x: hidden;
        border-radius: 20px;
    }

        .checkboxes::-webkit-scrollbar {
            display: none;
        }

    .search {
        width: 100%;
        border-radius: 3mm;
        padding: 10px;
        outline: none;
        border: 1px solid gray;
    }

    .select_label {
        display: block;
        padding: 10px 0;
    }

        .select_label h4 {
            display: inline-block;
            margin: 0;
        }

    input.checkbox {
        width: 20px;
        height: 20px;
    }

    .checkbox {
        margin-right: 10px;
    }
</style>
<hr />
